<h1><%= customer.name %>'s Payment</h1>

<form action="/customers/<%= customer.id %>/?_method=PUT" method="POST">
  <div>
    <input type="radio" class="" id="type" name="type" value="One-Time Payment" checked required/>
    <label for="type">One-Time-Payment</label>
  </div>

  <div>
    <label for="amount">Amount</label>
    <input type="number" class="" id="amount" name="amount" value="<%= customer.amount %>" required/>
    
