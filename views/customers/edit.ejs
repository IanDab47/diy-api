      <option value="EUR">EUR</option>
      <option value="GBP">GBP</option>
      <option value="KRW">KRW</option>
      <option value="MXN">MXN</option>
      <option value="NZD">NZD</option>
    </select> -->
  </div>

  <div>
    <label for="currency">Currency</label>
    <input type="text" class="" id="currency" name="currency" value="<%= customer.currency %>" required/>
  </div>

  <div>
    <label for="name">Customer</label>
    <input type="text" class="" id="name" name="name" value="<%= customer.name %>" required/>
  </div>

  <div>
    <label for="description">Description</label>
    <input type="text" class="" id="description" name="description" value="<%= customer.description %>" />
  </div>
  
  <div>
    <label for="statement">Statement Descriptor</label>
    <input type="text" class="" id="statement" name="statement" value="<%= customer.statement %>" />
  </div>

  <div>
    <button type="submit">Update</button>
  </div>
</form>